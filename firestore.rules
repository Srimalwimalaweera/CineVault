
/**
 * This ruleset enforces a security model for the CineVault application, which
 * manages a public collection of videos and private, user-specific data like
 * favorites and playlists.
 *
 * Core Philosophy:
 * The security model is built on two key principles:
 * 1. Public Read, Admin Write: A central collection of videos is readable
 *    by anyone to allow for browsing. However, all modifications (create, update,
 *    delete) to this collection are restricted to administrative users.
 * 2. Strict User Ownership: All user-generated content (profiles, favorites,
 *    playlists, reactions, ratings) is stored in a path dedicated to that user or
 *    validated against their UID. Access is strictly limited to the
 *    authenticated user who owns that data.
 *
 * Data Structure:
 * - /videos/{videoId}: Public video metadata.
 * - /videos/{videoId}/reactions/{userId}: User reactions to a video, one doc per user.
 * - /videos/{videoId}/ratings/{userId}: User ratings for a video, one doc per user.
 * - /users/{userId}: Public user profiles.
 * - /users/{userId}/favorites/{favoriteId}: A user's private list of favorites.
 * - /users/{userId}/playlists/{playlistId}: A user's private video playlists.
 * - /settings/serviceProviders: Publicly readable app settings.
 * - /payments/{paymentId}: User-specific payment records.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------

    /**
     * Checks if a user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Validates if the requesting user is the owner of a document based on a userId.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Checks if the user has administrative privileges by safely reading their user document.
     * This check is more robust as it verifies the existence of the document first.
     */
    function isDbAdmin() {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    /**
     * Validates that the role or status being assigned is not being maliciously escalated.
     * Prevents users from escalating their own privileges.
     */
    function isNotEscalatingPrivileges() {
        let isAlreadyAdmin = resource != null && resource.data.role == 'admin';
        
        // If an admin is making the change, allow it.
        if (isDbAdmin()) {
            return true;
        }

        // If a regular user is making the change:
        // They cannot change their 'role' at all.
        let isChangingRole = request.resource.data.role != resource.data.role;
        // They cannot change their 'status' to 'pro'.
        let isUpgradingToPro = request.resource.data.status == 'pro' && resource.data.status != 'pro';

        return !isChangingRole && !isUpgradingToPro;
    }
    
    /**
     * Validates that a rating value is an integer between 1 and 5.
     */
    function isValidRating() {
      let rating = request.resource.data.rating;
      return rating is int && rating >= 1 && rating <= 5;
    }


    // ----------------------------------------------------------------------
    // Collection Rules
    // ----------------------------------------------------------------------

    /**
     * @description Publicly readable video metadata. Writes are restricted to admins.
     * @path /videos/{videoId}
     */
    match /videos/{videoId} {
      allow read, list: if resource.data.status == 'published' || isDbAdmin();
      allow write: if isDbAdmin();
      
      /**
       * @description User reactions to a video. A user can only manage their own reaction.
       * The document ID must be the user's ID.
       * @path /videos/{videoId}/reactions/{userId}
       */
      match /reactions/{userId} {
        allow read: if true;
        allow write, delete: if isOwner(userId);
      }
      
      /**
       * @description User ratings for a video. A user can only manage their own rating.
       * @path /videos/{videoId}/ratings/{userId}
       */
      match /ratings/{userId} {
        allow read: if true;
        allow write: if isOwner(userId) && isValidRating();
        allow delete: if isOwner(userId);
      }
    }

    /**
     * @description User profile data.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow read: if isOwner(userId) || isDbAdmin();
      allow write: if (isOwner(userId) && isNotEscalatingPrivileges()) || isDbAdmin();
      allow delete: if false; // Deleting user profiles is disabled to maintain data integrity.
      
      /**
       * @description A user's private collection of favorite videos.
       * @path /users/{userId}/favorites/{videoId}
       */
      match /favorites/{videoId} {
        allow read, write: if isOwner(userId);
      }
  
      /**
       * @description A user's private collection of video playlists.
       * @path /users/{userId}/playlists/{playlistId}
       */
      match /playlists/{playlistId} {
        allow read, write: if isOwner(userId);
      }
    }

    /**
     * @description Publicly readable application settings.
     * @path /settings/{docId}
     */
    match /settings/{docId} {
        allow read: if true;
        allow write: if isDbAdmin();
    }

    /**
     * @description Stores payment transactions.
     * @path /payments/{paymentId}
     */
    match /payments/{paymentId} {
        // Admins can read and update (approve/reject) payment details.
        allow read, update: if isDbAdmin();
        // Users can create their own payment record, but cannot read or update any.
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow delete: if false;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    match /thumbnails/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.resource.size < 5 * 1024 * 1024 && request.resource.contentType.matches('image/.*');
    }
  }
}
